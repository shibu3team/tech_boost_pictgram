<div class="reply-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">New Post</h1>
        <%= form_for @reply, url: reply_new_path do |f| %>
          <div class="form-group">
            <%= f.text_area :content, placeholder:"コメントを入力", class: 'form-control form-reply' %>
          </div>

          <div class="form-group">
          <%= f.hidden_field :topic_id, value: params[:id],  :readonly => true, class: "form-control"%>
          </div>


          <%= f.submit '投稿', class: 'btn btn-black btn-block btn-reply' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
