<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">New Post</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :image, value:"画像アップロード", class:"text-white text-slim" %>
            <%= f.file_field :image, class:"text-white text-slim" %>
          </div>

          <div class="form-group">
            <%= f.label :description,value:"説明", class:"text-white text-slim"%>
            <%= f.text_area :description, placeholder:"タグ付けしまくろう！", class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
